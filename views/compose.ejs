<%- include("partials/header") %> 

<h1>Compose</h1>
<form action="/compose" method="POST">

    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" id="title" name="newTitle" autocomplete="off">
    </div>
    
    <div class="form-group">
        <label for="post">Post</label>
        <textarea class="form-control" name="newPara" id="post" autocomplete="off" rows="6"></textarea>
    </div>

    <button type="submit" class="btn btn-outline-dark">Publish</button>

</form>

